{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "kms:Get*",
                "kms:Describe*",
                "kms:List*",
                "kms:EnableKey",
                "kms:Decrypt",
                "kms:DisableKey",
                "kms:Encrypt",
                "kms:GenerateDataKey",
                "kms:CreateAlias",
                "kms:CreateKey"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:Get*",
                "s3:Describe*",
                "s3:List*",
                "s3:PutEncryptionConfiguration",
                "s3:PutObject",
                "s3:PutBucketPolicy",
                "s3:DeleteObject",
                "s3:DeleteBucketPolicy"
            ],
            "Resource": "*"
        }
    ]
}